<%= link_to "change locale", params.merge(:locale => (I18n.locale == :ko ? :en : :ko)) %>
<h1><%= t :hello %></h1>

<div>
  <%= if I18n.locale == :ko then "와플스튜디오" else "Wafflestudio" end %>
</div>

<div>
  <%= @instance.selected_name %>
</div>


<div>
  <%= form_for @new_instance do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :name_ko %>
    <%= f.text_field :name_ko %>
    <%= f.submit 'create' %>
  <% end %>
</div>
